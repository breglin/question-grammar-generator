@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :length_of ;
  lemon:entry    :of .

:length_of a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:noun ;
  lemon:canonicalForm  :length_form ;
  lemon:synBehavior    :length_of_nounpp ;
  lemon:sense          :length_sense_ontomap .

:length_form a       lemon:Form ;
  lemon:writtenRep "length"@en .

:length_of_nounpp a              lexinfo:NounPPFrame ;
  lexinfo:copulativeArg        :arg1 ;
  lexinfo:prepositionalAdjunct :arg2 .

:length_sense_ontomap a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping   :length_sense_ontomap ;
  lemon:reference     <http://dbpedia.org/property/length> ;
  lemon:subjOfProp    :arg2 ;
  lemon:objOfProp     :arg1 ;
  lemon:condition     :length_condition .

:length_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/River> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema#nonNegativeInteger> .

:arg2 lemon:marker :of .

## Prepositions ##

:of a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "of"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .